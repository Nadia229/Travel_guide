<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".Bd_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="-5dp"
        android:orientation="vertical"

        android:padding="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <EditText
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:id="@+id/search"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="#00000000"
                android:hint="search here"
                android:textSize="20dp">


            </EditText>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:onClick="searchclick"
                android:src="@drawable/ic_search"
                android:layout_marginTop="2dp"
                android:layout_marginStart="14dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <TextView
                android:layout_width="165dp"
                android:layout_height="150dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="কক্সবাজার"
                android:onClick="coxsbazar"
                android:background="@drawable/shaddow"
                android:alpha="0.6"
                android:textColor="@color/white"
                android:textSize="19dp">

            </TextView>

            <TextView
                android:layout_width="165dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:alpha="0.6"
                android:background="@drawable/shaddow"
                android:text="খাগড়াছড়ি"
                android:onClick="khagrachori"
                android:textColor="@color/white"
                android:textSize="19dp">

            </TextView>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <TextView
                android:layout_width="165dp"
                android:layout_height="150dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="কুমিল্লা"
                android:alpha="0.6"
                android:onClick="com"
                android:background="@drawable/shaddow"
                android:textColor="@color/white"
                android:textSize="19dp"
                >

            </TextView>

            <TextView
                android:layout_width="165dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:background="@drawable/shaddow"
                android:text="বাগেরহাট"
                android:alpha="0.6"
                android:onClick="b"
                android:textColor="@color/white"
                android:textSize="19dp"
                >

            </TextView>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <TextView
                android:layout_width="165dp"
                android:layout_height="150dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:alpha="0.6"
                android:text="রাঙামাটি"
                android:onClick="rangamati"
                android:background="@drawable/shaddow"
                android:textColor="@color/white"
                android:textSize="19dp">

            </TextView>

            <TextView
                android:layout_width="165dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:background="@drawable/shaddow"
                android:alpha="0.6"
                android:onClick="s"
                android:text="সিলেট"
                android:textColor="@color/white"
                android:textSize="19dp"
                >

            </TextView>



        </LinearLayout>



    </LinearLayout>






</ScrollView>